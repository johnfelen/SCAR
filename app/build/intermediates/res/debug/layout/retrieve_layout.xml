<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewRetrieve"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background = "@drawable/subtle_pattern"
    android:layout_marginBottom = "48dp"
    android:fillViewport="true"
    >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <EditText
        android:id="@+id/kind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Search File Name"/>

    <EditText
        android:id="@+id/retrieve_pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Enter Document Retrieval Password"/>

    <Button
        android:id="@+id/getDoc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rounded_corners"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/getDoc"
        android:textColor="#98EF8E"
        android:layout_marginBottom = "2dp"/>

    <ImageView
        android:id="@+id/responseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

</ScrollView><!-- From: file:/C:/Users/John/.AndroidStudio/CryptoResearch/app/src/main/res/layout/retrieve_layout.xml -->