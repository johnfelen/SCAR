<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.scar"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.scar.android.Activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.scar.android.Activities.Store" android:label="@string/store_app" ></activity>
        <activity android:name="com.scar.android.Activities.Retrieve" android:label="@string/retrieve_app" ></activity>
        <activity android:name="com.scar.android.Activities.New_Server" android:label="@string/new_server_app" ></activity>
        <activity android:name="com.scar.android.Activities.About" android:label="@string/about_app" ></activity>
        
    </application>

</manifest>
